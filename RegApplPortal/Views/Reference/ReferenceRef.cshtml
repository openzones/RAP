@model IEnumerable<RegApplPortal.WebApps.Models.ReferenceUniversalItemModel>
@{
    ViewBag.Title = "Редактор справочника ReferenceRef";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row margined">
    <div class="col-md-8">
        <h3>@RegApplPortal.WebApps.Models.ReferenceUniversalItemModel.ReferenceDisplayName</h3>
    </div>
</div>

<div class="row margined">
    <div class="col-md-9">
        @Html.ActionLink("Добавить новую запись в таблицу", "ReferenceRefEdit")
    </div>
    <div class="col-md-3">
        @Html.ActionLink("Вернуться в справочники", "Index")
    </div>
</div>

<table class="table table-striped table-condensed">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@OMHelpers.ActionLinkIcon(Url, "ReferenceRefEdit", "Reference", (long)item.Id, "", "glyphicon-pencil", true)*@
                <a href="@Url.Action("ReferenceRefEdit", "Reference", new { id = (long)item.Id })" target="_blank" class="btn-default">
                    <span class="glyphicon glyphicon-pencil" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id, refname = item.ReferenceName }, new { onclick = "return confirm('Вы уверены, что хотите удалить запись целиком?');" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Добавить новую запись в таблицу", "ReferenceRefEdit")
</p>
